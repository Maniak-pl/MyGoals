<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/goal_progressbar_bg">

    <TextView
        android:id="@+id/goalProgressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/goalProgressBar"
        style="@style/GoalProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/goalProgressLabel"
        android:padding="8dp"
        android:theme="@style/GoalProgressBar"/>

</RelativeLayout>